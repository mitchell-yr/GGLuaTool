<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_unluac_decompile_background"
    android:clipToOutline="true"
    android:padding="0dp">

    <!-- 标题栏：修改为主题色 Purple 700 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF3700B3"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="反编译成功"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 文件信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="#F8F9FA"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="16dp"
                            android:background="#FF3700B3"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="文件概览"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#3700B3"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_file_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="文件名: example.luac"
                        android:textSize="13sp"
                        android:textColor="#424242"
                        android:paddingBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_file_size"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="大小: 1024 B"
                            android:textSize="12sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/tv_decompile_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="耗时: 0.5s"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="源码预览"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp"/>

            <!-- 代码显示区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F5F5"
                app:contentPadding="12dp">

                <TextView
                    android:id="@+id/tv_decompile_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="loading..."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="#263238"
                    android:textIsSelectable="true"
                    android:lineSpacingExtra="3dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end"
        android:elevation="8dp"
        android:background="#FFFFFF">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_copy_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制"
            android:textColor="#FF3700B3"
            app:strokeColor="#FF3700B3"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存文件"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF3700B3"
            app:elevation="2dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

</LinearLayout>