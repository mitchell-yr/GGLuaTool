<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:id="@+id/layoutStatusBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/success_green"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgStatusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/txtStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="语法正确"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 错误详情（仅错误时显示） -->
        <LinearLayout
            android:id="@+id/layoutErrorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_error_detail"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="错误详情"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:text="错误信息"
                android:textColor="@color/error_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtErrorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="位置: 第 1 行"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 成功提示（仅成功时显示） -->
        <TextView
            android:id="@+id/txtSuccessMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您的 Lua 脚本语法完全正确！"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnJumpToError"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转跳到错误行"
                android:textColor="@color/purple_500"
                android:visibility="gone"
                app:strokeColor="@color/purple_500" />

            <Button
                android:id="@+id/btnClose"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="关闭"
                android:textColor="@color/purple_500" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>