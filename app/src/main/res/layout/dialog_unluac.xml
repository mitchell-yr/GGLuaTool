<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- 标题区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_header_background"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择要反编译的脚本"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="支持.lua和.luac文件"
            android:textColor="#E0E0E0"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 折叠介绍区域 -->
        <LinearLayout
            android:id="@+id/ll_intro_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- 折叠标题 -->
            <LinearLayout
                android:id="@+id/ll_intro_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_expand_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="#6200EE" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="unluac介绍"
                    android:textColor="#6200EE"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 折叠内容 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_intro_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="#F3E5F5"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="unluac是一个强大的Lua反编译工具，可以将编译后的Lua字节码还原为可读的源代码。\n\n特点：\n• 支持Lua 5.1-5.3版本\n• 可处理加密和混淆的脚本\n• 保留原始代码结构\n• 广泛用于游戏脚本分析"
                    android:textColor="#4A148C"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 选项按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_from_project"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="从项目列表中选择"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#6200EE"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_folder"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_custom_script"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="选择自定义脚本"
            android:textColor="#6200EE"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_file"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="#6200EE"
            app:strokeColor="#6200EE"
            app:strokeWidth="2dp" />

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="取消"
            android:textColor="#757575"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>