<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_plugin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:rippleColor="#333700B3"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 左侧紫色装饰条 -->
        <View
            android:id="@+id/view_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#FF3700B3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 顶部：图标、名称和开关 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 插件图标背景 -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_plugin_icon">

                    <ImageView
                        android:id="@+id/iv_plugin_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_extension"
                        app:tint="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_plugin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#FF3700B3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="插件名称" />

                    <!-- 版本和状态标签 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_plugin_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#757575"
                            android:textSize="12sp"
                            tools:text="v1.0.0" />

                        <!-- 状态标签 -->
                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_status_enabled"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:text="已启用"
                            android:textColor="@android:color/white"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Material Switch -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:minWidth="52dp"
                    android:minHeight="32dp"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#F0F0F0" />

            <!-- 描述 -->
            <TextView
                android:id="@+id/tv_plugin_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:textColor="#616161"
                android:textSize="14sp"

                tools:text="这是一段插件描述信息，用于说明插件的功能和用途。" />

            <!-- 展开/收起提示 -->
            <TextView
                android:id="@+id/tv_expand_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="点击展开更多"
                android:textColor="#FF3700B3"
                android:textSize="12sp"
                android:visibility="visible" />

            <!-- 按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_document"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:text="使用文档"
                    android:textColor="#FF3700B3"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_document"
                    app:iconSize="16dp"
                    app:iconTint="#FF3700B3"
                    app:rippleColor="#333700B3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_action"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="16dp"
                    android:text="配置"
                    android:textSize="12sp"
                    app:backgroundTint="#FF3700B3"
                    app:cornerRadius="18dp"
                    app:icon="@drawable/ic_settings"
                    app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>