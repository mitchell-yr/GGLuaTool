<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_license"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 卡片头部（保持不变） -->
        <LinearLayout
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_avatar_circle"
                android:gravity="center"
                android:text="O"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_library_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="OkHttp" />

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_version_tag"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        android:textColor="@color/purple_700"
                        android:textSize="10sp"
                        tools:text="v4.10.0" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    tools:text="Square, Inc." />

                <TextView
                    android:id="@+id/tv_license_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_license_small"
                    android:drawablePadding="4dp"
                    android:textColor="@color/purple_500"
                    android:textSize="11sp"
                    tools:text="Apache License 2.0" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_arrow"
                app:tint="@color/purple_700"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <!-- 展开内容区域 -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- 内部分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="许可证内容"
                    android:textColor="@color/purple_700"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- 修复: 移除固定高度限制，确保可以完整显示 -->
                <TextView
                    android:id="@+id/tv_license_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_license_content"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="3dp"
                    android:padding="12dp"
                    android:textColor="#424242"
                    android:textSize="11sp"
                    android:textIsSelectable="true"
                    tools:text="Licensed under the Apache License..." />

                <!-- 给 Label 添加 ID -->
                <TextView
                    android:id="@+id/tv_label_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="项目地址"
                    android:textColor="@color/purple_700"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- 修复: 调整样式，增加点击区域 -->
                <TextView
                    android:id="@+id/tv_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_link"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingVertical="8dp"
                    android:textColor="@color/purple_700"
                    android:textSize="13sp"
                    tools:text="https://github.com/..." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>